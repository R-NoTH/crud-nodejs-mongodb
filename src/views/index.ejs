<%- include('partials/_header'); %>

  <div class="container">
    <div class="row">
      <div class="col-sm-5">
        <div class="card"> 
          <div class="card-body">
            <form action="/add" method="POST">
              <div class="mb-3">

                <input type="text" name="title" placeholder="Title" class="form-control">
              </div>
              <div class="mb-3">

                <textarea name="description" cols="30" rows="2" class="form-control"></textarea>
              </div>
              <button type="submit" class="btn btn-primary btn-black">enviar</button>
            </form>
          </div>
        </div>
      </div>
      <div class="col-sm-7">
        <table class="table table-dark table-hover">
          <thead>
            <tr>
              <th>#</th>
              <th>Title</th>
              <th>Description</th>
              <th>Action</th>


            </tr>          
          </thead>
        </table>
      </div>
    </div>
  </div>

  <%- include('partials/_footer'); %>