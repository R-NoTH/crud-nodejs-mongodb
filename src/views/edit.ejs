<%- include('partials/_header'); %>
<div class="container">
  <div class="col-12">
    
    <form action="/update/<%= task._id %> " method="POST">
      <div class="mb-3">
        
        <input type="text" name="title" placeholder="Title" class="form-control" value="<%= task.title %> ">
      </div>
      <div class="mb-3">
        
        <textarea name="description" cols="30" rows="2" class="form-control"><%= task.description %> </textarea>
      </div>
      <button type="submit" class="btn btn-primary btn-black">enviar</button>
    </form>
  </div>
</div>
<%- include('partials/_footer'); %>
